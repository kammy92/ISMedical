<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_elevation">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/ivEventImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"/>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvEventDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="@dimen/activity_margin_extra_small"
                android:paddingLeft="@dimen/activity_margin_small"
                android:paddingRight="@dimen/activity_margin_small"
                android:paddingTop="@dimen/activity_margin_extra_small"
                android:text="10 Feb - 12 Feb"
                android:textColor="#A20057"
                android:textSize="@dimen/text_size_extra_small"/>
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvEventDates"
                android:paddingLeft="@dimen/activity_margin_small"
                android:paddingRight="@dimen/activity_margin_small"
                android:text="EXPODENT"
                android:textColor="@color/primary_text2"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvEventVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvEventName"
                android:paddingBottom="@dimen/activity_margin_extra_small"
                android:paddingLeft="@dimen/activity_margin_small"
                android:paddingRight="@dimen/activity_margin_small"
                android:paddingTop="@dimen/activity_margin_extra_small"
                android:text="Pragati Maidan, New Delhi"
                android:textColor="@color/secondary_text2"
                android:textSize="@dimen/text_size_extra_small"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvEventVenue"
                android:background="@color/tertiary_text2"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEventVenue"
                android:weightSum="2.0">
                <RelativeLayout
                    android:id="@+id/rlInterested"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"

                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ivInterested"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_like"
                    />
                    <TextView
                        android:id="@+id/tvInterested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivInterested"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="Interested"
                        android:textColor="@color/secondary_text2"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_share"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivShare"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="Share"
                        android:textColor="@color/secondary_text2"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
