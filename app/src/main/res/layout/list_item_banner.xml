<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvBannerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivBanner"
        android:layout_alignStart="@+id/ivBanner"
        android:layout_alignTop="@+id/ivBanner"
        android:layout_margin="@dimen/activity_margin"
        android:background="@color/text_color_white"
        android:padding="@dimen/activity_margin_extra_small"
        android:text="EXPLORE"
        android:textColor="@color/primary_text2"
        android:textSize="@dimen/text_size_extra_small"
        android:visibility="gone"/>

</RelativeLayout>