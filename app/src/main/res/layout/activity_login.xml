<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/text_color_white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone"
        app:elevation="0dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            style="@style/Widget.MyApp.ActionBar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/app_background2"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="parallax">
            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/btFilter"
                    android:layout_alignTop="@+id/btFilter"
                    android:layout_toLeftOf="@+id/btFilter"
                    android:layout_toStartOf="@+id/btFilter"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingStart="@dimen/activity_margin"
                    android:text="Sign Up"
                    android:textColor="@color/primary_text2"
                    android:textSize="@dimen/text_size_title_app_name"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/btFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/activity_margin"
                    android:text="FILTER"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color_grey_light2"/>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/splash_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlButton"
                android:overScrollMode="never">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:id="@+id/llFields"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin"
                        android:layout_marginRight="@dimen/activity_margin"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/swiggy_login_card_bg"
                        android:orientation="vertical"
                        android:paddingBottom="42dp"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="@dimen/activity_margin"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tvFieldsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/llFields"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/activity_margin"
                            android:gravity="center"
                            android:padding="@dimen/activity_margin_small"
                            android:text="Enter your details to get started"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_small"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="+91"
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"/>
                            <EditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/swiggy_et_background"
                                android:inputType="number"
                                android:maxLength="10"
                                android:paddingEnd="@dimen/activity_margin"
                                android:paddingLeft="48dp"
                                android:paddingRight="@dimen/activity_margin"
                                android:paddingStart="48dp"
                                android:text=""
                                android:textColor="@color/primary_text2"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"/>
                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:indeterminateDuration="1000"
                                android:indeterminateTint="@color/primary_text2"
                                android:indeterminateTintMode="src_in"
                                android:visibility="gone"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tvInternationalUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|right"
                            android:paddingBottom="@dimen/activity_margin_extra_small"
                            android:paddingEnd="0dp"
                            android:paddingLeft="@dimen/activity_margin_extra_small"
                            android:paddingRight="0dp"
                            android:paddingStart="@dimen/activity_margin_extra_small"
                            android:paddingTop="@dimen/activity_margin_extra_small"
                            android:text="I am an international user"
                            android:textColor="@color/accent2"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone"/>
                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin"
                            android:background="@drawable/swiggy_et_background"
                            android:inputType="textPersonName|textCapWords"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone"/>
                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin"
                            android:background="@drawable/swiggy_et_background"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I am a ..."
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone"/>
                        <EditText
                            android:id="@+id/etType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin"
                            android:background="@drawable/swiggy_et_background"
                            android:focusable="false"
                            android:inputType="text"
                            android:textColor="@color/primary_text2"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                    </LinearLayout>
                </RelativeLayout>

            </ScrollView>
            <RelativeLayout
                android:id="@+id/rlButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvTermsAndConditions"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginTop="-35dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/circle_button"
                android:elevation="@dimen/activity_margin">
                <TextView
                    android:id="@+id/tvGetStarted"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="@dimen/activity_margin"
                    android:text="GET STARTED"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_company_name"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:elevation="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"
                    android:paddingLeft="@dimen/activity_margin"
                    android:paddingRight="@dimen/activity_margin_small"
                    android:paddingTop="@dimen/activity_margin"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvTermsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/activity_margin_small"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:gravity="center"
                android:text="By signing up you confirm that you have read &amp; agree to our company Privacy Policy &amp; Terms and Conditions"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_extra_small"
                android:textStyle="bold"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>